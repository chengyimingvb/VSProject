<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/m4399ea_304dp"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/m4399ea_27dp"
    android:paddingRight="@dimen/m4399ea_27dp"
    android:paddingTop="@dimen/m4399ea_28dp"
    android:paddingBottom="@dimen/m4399ea_28dp"
    android:orientation="vertical">

    <TextView
        android:id="@id/m4399ea_activation_id_tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/m4399ea_black_333333"
        android:textSize="@dimen/m4399ea_16sp"
        android:text="@string/m4399ea_activation_msg_instructions" />

    <LinearLayout
        android:layout_marginTop="@dimen/m4399ea_15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m4399ea_36dp"
        android:orientation="horizontal">

        <cn.m4399.ea.app.FlowPasteTextView
            android:id="@id/m4399ea_activation_id_edt_dialog_input"
            android:layout_weight="0.6"
            android:layout_width="@dimen/m4399ea_0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/m4399ea_10dp"
            android:background="@drawable/m4399ea_activation_shape_input_bg"
            android:ellipsize="end"
            android:hint="@string/m4399ea_activation_hint"
            android:textColorHint="@color/m4399ea_black_bbbbbb"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/m4399ea_black_666666"
            android:textSize="@dimen/m4399ea_14sp"
            tools:ignore="all" />

        <LinearLayout
            android:id="@id/m4399ea_activation_id_btn_dialog_positive"
            android:background="@drawable/m4399ea_activation_dialog_action_confirm"
            android:layout_width="@dimen/m4399ea_100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@id/m4399ea_activation_id_tv_dialog_positive_text"
                android:textSize="@dimen/m4399ea_14sp"
                android:textColor="@color/m4399ea_white_ffffff"
                android:text="@string/m4399ea_activation_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@id/m4399ea_activation_id_btn_dialog_negative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m4399ea_27dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/m4399ea_20dp"
        android:background="@drawable/m4399ea_activation_dialog_negative_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@id/m4399ea_activation_id_tv_dialog_negative_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m4399ea_activation_negative"
            android:textColor="@color/m4399ea_red_ffa92d"
            android:textSize="@dimen/m4399ea_12sp" />

        <View
            android:layout_width="@dimen/m4399ea_5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/m4399ea_ic_activation_more" />
    </LinearLayout>

</LinearLayout>

